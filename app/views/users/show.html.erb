<div class="row">
  <div class="col-md-3 text-center">
    <%= image_tag @user.profile.avatar.url, :id => "user-profile-pic" %>
  </div>
  <idv class="col-md-6" id="user-profile">
    <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
    <h3><span class="job-title-icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
     <div class="well">
         <h3>Description</h3>
        <%= @user.profile.description %><br/>
    </div>
    <% if current_user.plan_id == 2 %>
      <div class="well contact-details">
        <h3>Contact</h3>
        <p><i class="fa fa-phone"></i> <%= @user.profile.phone_number %></p>
        <p><i class="fa fa-envelope-o"></i> <%= @user.profile.contact_email %></p>
      </div>
    <% end %>
  </idv>

</div>
